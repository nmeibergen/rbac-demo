{
  "name": "rbac-demo",
  "version": "1.0.0",
  "description": "An example on building a RBAC framework",
  "main": "index.js",
  "scripts": {
    "start-dev": "./node_modules/.bin/nodemon --watch src --ext js,graphql --exec babel-node index.js"
  },
  "author": "William Lyon",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.8.2",
    "babel": "^6.23.0",
    "dotenv": "^7.0.0",
    "graphql": "^14.6.0",
    "graphql-auth-user-directives": "2.3.2",
    "graphql-middleware": "^4.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  }
}
